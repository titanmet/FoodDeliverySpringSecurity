<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns="http://www.springframework.org/schema/security"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
                http://www.springframework.org/schema/security
                http://www.springframework.org/schema/security/spring-security-5.3.xsd">

    <http>
        <intercept-url pattern="/" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <intercept-url pattern="/login" access="permitAll()"/>
        <intercept-url pattern="/user/*" access="hasRole('ROLE_USER')"/>
        <intercept-url pattern="/admin/*" access="hasRole('ROLE_ADMIN')"/>
        <intercept-url pattern="/moder/*" access="hasRole('ROLE_MODERATOR')"/>


        <form-login login-page="/login"
                    login-processing-url="/perform_login"
                    default-target-url="/"
                    authentication-failure-url="/login?error=true"/>
        <logout logout-success-url="/login?logout=true" />
        <access-denied-handler error-page="/access-denied"/>
        <csrf disabled="true"/>
    </http>

    <user-service>
        <user name="user" password="{noop}user" authorities="ROLE_USER" />
        <user name="admin" password="{noop}admin" authorities="ROLE_ADMIN" />
        <user name="moder" password="{noop}moder" authorities="ROLE_MODERATOR" />
        <user name="superuser" password="{noop}super" authorities="ROLE_ADMIN, ROLE_MODERATOR" />
    </user-service>
</beans:beans>
